                                             <children>
                                                <CheckBox fx:id="PrintCheckCheckBox" mnemonicParsing="false" text="Печать чека" />
                                                <CheckBox fx:id="PrintTicketCheckBox" mnemonicParsing="false" text="Печать билета" />
