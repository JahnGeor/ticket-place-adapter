                                       <VBox.margin>
                                          <Insets />
                                       </VBox.margin>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" spacing="20.0">
                                       <children>
                                          <Label maxWidth="250.0" prefWidth="250.0" text="Автоматическое переподключение" />
                                          <CheckBox fx:id="automaticallyReconnectCheckBox" mnemonicParsing="false" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" spacing="20.0">
                                       <children>
                                          <Label maxWidth="250.0" prefWidth="250.0" text="Интервал опроса" />
                                          <ComboBox fx:id="intervalBox" prefWidth="120.0" />
