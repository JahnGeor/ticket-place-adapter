<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.PasswordTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="main" alignment="TOP_CENTER" fillWidth="false" maxHeight="248.0" maxWidth="300.0" minHeight="248.0" minWidth="300.0" prefHeight="248.0" prefWidth="300.0">
         <children>
            <HBox alignment="CENTER" maxWidth="300.0" minWidth="300.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="image" fitHeight="75.0" fitWidth="280.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="120.0" prefWidth="280.0" spacing="10.0">
               <children>
                  <HBox prefHeight="20.0" prefWidth="200.0" spacing="5.0">
                     <children>
                        <ComboBox fx:id="profile" editable="true" prefWidth="300.0" promptText="Профиль" />
                        <Button fx:id="profileStage" graphicTextGap="2.0" maxWidth="30.0" minWidth="40.0" mnemonicParsing="false" onAction="#profileStageAction" prefWidth="30.0" text="+">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <PasswordTextField fx:id="password" />
                  <HBox alignment="CENTER" prefHeight="20.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="enter" mnemonicParsing="false" onAction="#enterAction" prefHeight="25.0" prefWidth="300.0" text="Войти" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </padding>
      </VBox>
      <VBox fx:id="additional" alignment="TOP_CENTER" fillWidth="false" layoutX="300.0" layoutY="1.0" maxHeight="248.0" maxWidth="300.0" minHeight="248.0" minWidth="300.0" prefHeight="248.0" prefWidth="300.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="75.0" fitWidth="280.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="120.0" prefWidth="280.0" spacing="10.0">
               <children>
                  <HBox prefHeight="20.0" prefWidth="200.0" spacing="5.0">
                     <children>
                        <TextField fx:id="login" prefWidth="280.0" promptText="Логин" />
                     </children>
                  </HBox>
                  <TextField fx:id="url" prefWidth="280.0" promptText="Адрес подключения" />
                  <HBox alignment="CENTER" prefHeight="20.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Button fx:id="hide" cancelButton="true" mnemonicParsing="false" onAction="#hideAction" prefHeight="25.0" prefWidth="150.0" text="Скрыть" />
                        <Button fx:id="add" mnemonicParsing="false" onAction="#addAction" prefHeight="25.0" prefWidth="150.0" text="Добавить" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
